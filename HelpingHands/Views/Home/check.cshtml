
@{
    ViewBag.Title = "check";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>check</h2>

<html>
<head>
    @*<link href="~/lib/twitter-bootstrap/css/bootstrap-grid.css" rel="stylesheet" />*@
    <style>
        table {
            width: 1000px;
            column-rule-style: solid;
        }

        th {
            margin-bottom: 50px;
        }
    </style>
</head>
<body>
    <form>
        Search : <input type="text" id="txt1" placeholder="Search For Emp Name" />
        <input type="submit" value="Search" id="btn" />
        <table class="tabel table-hover" border="1" id="table1">
        </table>
    </form>
    <script src="~/Scripts/jquery-3.7.0.slim.min.js"></script>
    <script>
        $("#btn").click(fun1);
        function fun1(event) {
            event.preventDefault()
            $.ajax({
                url: "/Help/Search?str=" + $("#txt1").val(),
                type: "GET",
                success: fun2,
                error: fun3
            });
        }
        function fun2(response) {
            $("#table1").html("<tr><th>Uid</th><th> UserName </th><th>City</th> <th>Password</th><th>ConfirmPassword</th><th>Gender</th><th>Languages</th><th>State</th><th>City</th><th>BloodGroup</th><th>Phone</th><th>Email</th></tr>");
            for (var i = 0; i <= response.length; i++) {
                $("#table1").append("<tr><td>" + response[i].Uid + "</td><td>" + response[i].UserName + "</td><td>" + response[i].Password + "</td><td>" + response[i].ConfirmPassword + "</td> <td>" + response[i].Gender + "</td> <td>" + response[i].Languages + "</td> <td>" + response[i].State + "</td> <td>" + response[i].City + "</td> <td>"+response[i].BloodGroup+"</td> <td>"+response[i].Phone+"</td> <td>"+response[i].Email+"</td></tr>");
            }
        }
        function fun3(xhr) {
            alert(xhr.responseText)
        }

    </script>
</body>
</html>

