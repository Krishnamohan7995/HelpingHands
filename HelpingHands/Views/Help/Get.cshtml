@model IEnumerable<HelpingHands.Models.Users>

@{
    ViewBag.Title = "Get";
    Layout = "~/Views/Shared/_HelpingHands.cshtml";
}

<style>
    body{
        margin:0;
        padding:0;
        box-sizing:border-box;
    }
    table {
        margin-left: 85px;
        width: 1350px;
        height: 150px;
        border:white solid 1px;
        background-color:white;
        border-style:solid;
        border-width:medium;
        block-size:auto;
        border-inline-style:solid;
    }

    a {
        text-decoration: none;
        font-weight: bold;
        font-family: Verdana;
    }

        a:hover {
            color: green;
        }
    th{
        font-family:Verdana;
        color:black;
        font-weight:bold;
    }
    td{
        color:rebeccapurple;
        font-weight:bold;
        font-family:Verdana;
    }
        td:hover {
            padding: 1.5px;
            color:  red;
            
            cursor: cell;
        }
    h1{
        color:rebeccapurple;
        font-family:Verdana;
        text-transform:uppercase;
        font-size:x-large;
        margin-top:0;
        text-decoration:underline;
    }
    p{
        margin-left:20px;
        font-weight:bold; 
        font-size:large;
    }
    #color {
        background-color: lavender;
        height: 80vh;
    }
    
</style>
<body> 
<div id="color" class="mar"> 
<h1 align="center">Doners Details</h1>

<p>
    @Html.ActionLink("New Doner", "Create")
</p>
<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Uid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ConfirmPassword)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Languages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BloodGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Uid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ConfirmPassword)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Languages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Uid }, new { @Class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id=item.Uid },new{onclick="return confirm('Are you sure want to Delete ?');"})
            </td>
        </tr>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</table>
</div>
</body>